# base config
[user]
	name = Keith Devens
[push]
	default = current
[include]
	# allow machine-specific configuration (eg. work vs home)
	path = ~/.config/machine_specific/.gitconfig
[core]
	excludesfile = ~/.gitignore_global

# diff / merge config
[diff]
	# git has built-in knowledge of how to call certain diff tools
	tool = meld
[merge]
	tool = meld
[difftool]
	prompt = false
[mergetool]
	prompt = false

[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX

# aliases
[alias]
	a = add
	ap = add -p
	d = diff
	dt = difftool
	ds = diff --staged
	dts = difftool --staged
	dst = difftool --staged
	st = status
	co = checkout
	cob = checkout -b
	br = branch
	ci = commit
	cim = commit -m
	ca = commit -a
	cam = commit -am
	unstage = reset HEAD --
	undo-commit = reset HEAD~
	pretty-log = log --graph --pretty=format:\"%Cred%h%Creset - %s %Cgreen(%ar) %C(bold blue)<%an>%Creset%C(yellow)%d%Creset\" --abbrev-commit --date=relative
	pl         = log --graph --pretty=format:\"%Cred%h%Creset - %s %Cgreen(%ar) %C(bold blue)<%an>%Creset%C(yellow)%d%Creset\" --abbrev-commit --date=relative
	prune-merged = !git branch --merged | grep -Ev '^\\*' | grep -Evx '\\s*(master|develop)\\s*' | xargs -n1 git branch -d
