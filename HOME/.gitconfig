[user]
	name = Keith Devens
[push]
	default = current
[merge]
	tool = git_ext_merge
[mergetool "git_ext_merge"]
	cmd = git_ext_merge \"$BASE\" \"$LOCAL\" \"$REMOTE\"
[diff]
	external = git_ext_diff
[mergetool]
	trustExitCode = false
[core]
	excludesfile = ~/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[include]
	# allow machine-specific configuration (eg. work vs home)
	path = ~/.gitconfig_machine_specific
[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	ca = commit -a
	cam = commit -am
	unstage = reset HEAD --
	pretty-log = log --graph --pretty=format:\"%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%C(yellow)%d%Creset\" --abbrev-commit --date=relative
	pl         = log --graph --pretty=format:\"%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%C(yellow)%d%Creset\" --abbrev-commit --date=relative
	prune-merged = !git branch --merged | grep -v '^*' | grep -vx '\\s*master\\s*' | grep -vx '\\s*develop\\s*' | xargs -n1 git branch -d
