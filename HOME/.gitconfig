# base config
[user]
	name = Keith Devens
[push]
	default = current
[include]
	# allow machine-specific configuration (eg. work vs home)
	path = ~/.gitconfig_machine_specific
[core]
	excludesfile = ~/.gitignore_global

# diff / merge config
[diff]
	# git has built-in knowledge of how to call meld
	tool = meld

[merge]
	tool = meld

[difftool]
	prompt = false

[mergetool]
	prompt = false

# aliases
[alias]
	d = difftool
	st = status
	co = checkout
	cob = checkout -b
	br = branch
	ci = commit
	ca = commit -a
	cam = commit -am
	unstage = reset HEAD --
	pretty-log = log --graph --pretty=format:\"%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%C(yellow)%d%Creset\" --abbrev-commit --date=relative
	pl         = log --graph --pretty=format:\"%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%C(yellow)%d%Creset\" --abbrev-commit --date=relative
	prune-merged = !git branch --merged | grep -v '^*' | grep -vx '\\s*master\\s*' | grep -vx '\\s*develop\\s*' | xargs -n1 git branch -d
